@model TestProjectUI.Models.LoginUser
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">

    <title>Login </title>


    <!-- Bootstrap core CSS -->

    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="https://code.jquery.com/ui/1.13.1/themes/base/jquery-ui.css" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Dongle:wght@300;400;700&display=swap" rel="stylesheet">

    <link href="~/Content/typography.css" rel="stylesheet" />
    <meta name="theme-color" content="#7952b3">


    <style>
        .bd-placeholder-img {
            font-size: 1.125rem;
            text-anchor: middle;
            -webkit-user-select: none;
            -moz-user-select: none;
            user-select: none;
        }

        .bd-placeholder-img-lg {
            font-size: 3.5rem;
        }


        .b-example-divider {
            height: 3rem;
            background-color: rgba(0, 0, 0, .1);
            border: solid rgba(0, 0, 0, .15);
            border-width: 1px 0;
            box-shadow: inset 0 .5em 1.5em rgba(0, 0, 0, .1), inset 0 .125em .5em rgba(0, 0, 0, .15);
        }

        .b-example-vr {
            flex-shrink: 0;
            width: 1.5rem;
            height: 100vh;
        }

        .bi {
            vertical-align: -.125em;
            fill: currentColor;
        }
    </style>


    <!-- Custom styles for this template -->

    <link href="~/Content/signin.css" rel="stylesheet" />
</head>
<body class="text-center">

    <main class="form-signin">
        <form method="post">
            <img class="mb-4" src="~/dist/img/hnbs.png" alt="" width="250" height="221">

            <div class="form-floating" style="margin:5px">
                <input type="text" class="form-control" name="username" id="floatingInput">
                <label for="floatingInput">Username</label>
                @Html.ValidationMessageFor(x => x.Username, "", new { @class = "text-danger" })
            </div>
            <div class="form-floating" style="margin:5px">
                <input type="password" class="form-control" name="password" id="floatingPassword" placeholder="Password">
                <label for="floatingPassword">Password</label>
                @Html.ValidationMessageFor(x => x.Password, "", new { @class = "text-danger" })
            </div>

            <button class="w-100 btn btn-lg btn-primary" type="submit">Sign in</button>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        </form>

    </main>


    <script src="~/js/bootstrap.js" type="text/javascript"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" type="text/javascript"></script>
    <script src="https://code.jquery.com/ui/1.13.1/jquery-ui.min.js" type="text/javascript"></script>
    <script type="text/javascript">

        $(document).ready(function () {

            $(".datepicker").datepicker({
                dateFormat: "yy-mm-dd"
            });

        });

    </script>


</body>
</html>

